{
  "manifest_version": 3,
  "name": "RHAT",
  "version": "1.8.2.3",
  "description": "RaterHub Automated Tasks - Advanced Chrome extension with real-time synchronization, task monitoring, and notifications. Developed by Ahmed Tarek.",
  "author": "Ahmed Tarek",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "scripting",
    "identity",
    "notifications",
    "tts",
    "offscreen"
  ],

  "host_permissions": [
    "https://*.raterhub.com/*",
    "https://www.googleapis.com/*"
  ],

  "oauth2": {
    "client_id": "YOUR_CLIENT_ID_HERE",
    "scopes": ["https://www.googleapis.com/auth/gmail.send"]
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.raterhub.com/evaluation/rater",
        "https://www.raterhub.com/evaluation/rater/task/index/*"
      ],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "RHAT"
  },

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["alarm.mp3"],
      "matches": ["https://www.raterhub.com/*"]
    }
  ]
}
